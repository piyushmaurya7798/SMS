@model Performance

@{
    ViewData["Title"] = "Add Performance";
}

<h2>Add Performance</h2>

<div class="container">
    <form id="addPerformanceForm">
        <div class="form-group">
            <label for="studentId">Student ID</label>
            <input type="number" class="form-control" id="studentId" name="StudentId" required />
        </div>

        <div class="form-group">
            <label for="grade">Grade</label>
            <input type="number" step="0.01" class="form-control" id="grade" name="Grade" required />
        </div>

        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="Date" required />
        </div>

        <button type="submit" class="btn btn-primary">Add Performance</button>
    </form>
</div>
