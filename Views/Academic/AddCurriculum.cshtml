@model Curriculum

@{
    ViewData["Title"] = "Add Curriculum";
}

<h2>Add Curriculum</h2>

<form asp-action="AddCurriculum" method="post">
    <div class="form-group">
        <label asp-for="CourseName" class="control-label">Course Name</label>
        <input asp-for="CourseName" class="form-control" />
        
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
      
    </div>

    <div class="form-group">
        <label asp-for="Syllabus" class="control-label">Syllabus</label>
        <textarea asp-for="Syllabus" class="form-control"></textarea>
        
    </div>

    <div class="form-group">
        <input type="submit" value="Add Curriculum" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

